#include <stdio.h>

int main()
{
    //Word length of Mary poppin's iconic supercalifragilisticexpialidocious + the null element, the null element isnt included in the max char count
    char word [34];
    int x;
    
    // The do while loop guarantees the loop is done at least once
    do{
        printf("Hello, do you want to convert your word from lower_case to upper-case (input 0) or from upper-case to lower_case (input 1): ");
        scanf("%d", &x, "\n");
        // We will repeat the loop as long as the use gives x a value equal to either 1 or 0
        // Note to user, the loop doesn't avoid any simbols different from a number, I apologise, I hope to patch this mistake in the future when I have the skills to do it
    } while(x != 0 && x != 1);
    
    if (x == 0) {
        printf("Enter word to convert to uppercase: ");
        scanf("%s", &word, "\n");
        
         // Counter to track the word's length and stop when the string finally ends
        for (int i = 0; word[i] != '\0'; i++) {

            // We will only acknowledge lower-case letters from the ASCII alphabet
            if (word[i] >= 'a' && word[i] <= 'z') {

                // Converts lower_case to upper-case
                word[i] = word[i] - 32;
            }
        }
    }
    
    
    else {
        printf("Please, give me the word you wish to convert to lower_case: ");
        scanf("%s", &word, "\n");
        
        // Counter to track the word's length and stop when the string finally ends
        for (int i = 0; word[i] != '\0'; i++) {
            
            //We will only acknowledge lower-case letters from the ASCII alphabet
            if (word[i] >= 'A' && word[i] <= 'Z') {
                
                //Converts upper_case to lower_case
            }    word[i] = word[i] + 32;
        }
    }

    printf("Final word: %s \n", word);

    return 0;
}

